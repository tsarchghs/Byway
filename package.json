{
  "name": "bloggrs-pluggable",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "plugins/*"
  ],
  "scripts": {
    "dev:web": "pnpm --filter @bloggrs/web dev",
    "dev:api": "pnpm --filter @bloggrs/api dev",
    "dev": "concurrently -k -n web,api -c blue,green \"pnpm dev:web\" \"pnpm dev:api\"",
    "build": "pnpm -r build"
  },
  "devDependencies": {
    "@types/node": "^22.18.13",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "@vue/babel-plugin-jsx": "^2.0.1",
    "@vue/runtime-dom": "^3.5.22",
    "add": "^2.0.6",
    "bcryptjs": "^3.0.2",
    "canvas": "^3.2.0",
    "concurrently": "^9.0.0",
    "gifencoder": "^2.0.1",
    "jsonwebtoken": "^9.0.2",
    "playwright": "^1.56.1",
    "pnpm": "^10.20.0",
    "prisma": "^6.18.0",
    "vite": "^7.1.12",
    "vue-tsc": "^3.1.3",
    "vue-tsx-support": "^3.2.0"
  },
  "dependencies": {
    "@ant-design/icons-vue": "^7.0.1",
    "@prisma/client": "^6.18.0",
    "ant-design-vue": "^4.2.6",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "leaflet": "^1.9.4",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3"
  }
}