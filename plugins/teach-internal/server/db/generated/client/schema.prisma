generator client {
  engineType = "node-api"
  provider   = "prisma-client-js"
  output     = "./generated/client"
}

datasource db {
  provider = "mysql" // can be Postgres too
  url      = "mysql://root:gjergji21@localhost:3306/byway_teach_internal" // e.g., file:./auth.db
}

model Course {
  id            String   @id @default(cuid())
  teacherId     String // soft link to Authentication.user.id
  title         String
  category      String?
  difficulty    String?
  description   String?
  price         Float    @default(0)
  discount      Float    @default(0)
  coverUrl      String?
  metadata      Json?
  modules       Module[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  institutionId String?

  @@index([teacherId])
}

model Module {
  id       String   @id @default(cuid())
  courseId String
  title    String
  lessons  Lesson[]
  Course   Course   @relation(fields: [courseId], references: [id])
}

model Lesson {
  id        String   @id @default(cuid())
  moduleId  String
  title     String
  type      String
  duration  Int?
  content   String?
  videoUrl  String?
  rubric    String?
  preview   Boolean  @default(false)
  metadata  Json?
  createdAt DateTime @default(now())
  Module    Module   @relation(fields: [moduleId], references: [id])
  position  Int?     @default(0)
}

model Classroom {
  id            String   @id @default(cuid())
  courseId      String
  institutionId String?
  name          String
  startDate     DateTime
  endDate       DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Assignment {
  id          String    @id @default(cuid())
  classroomId String
  title       String
  description String
  dueDate     DateTime
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  acceptUntil DateTime?
  maxAttempts Int?      @default(1)
  latePenalty Float?

  rubric        Json?
  gradingWeight Float?
}

model Submission {
  id           String    @id @default(cuid())
  assignmentId String
  studentId    String
  fileUrl      String?
  grade        Float?
  feedback     String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  gradedAt     DateTime?
  graderId     String?
  rubric       Json?
  comment      String?
  attempt      Int?      @default(1)
  isLate       Boolean?  @default(false)

  comments Json?
}
