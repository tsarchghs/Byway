generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "sqlite" // can be Postgres too
  url      = "file:./auth.db" // e.g., file:./auth.db
}

model User {
  uiPrefsJson String?
  id               String   @id @default(cuid())
  teacherProfileId String?
  email            String   @unique
  password         String
  firstName        String?
  lastName         String?

  // UI/roles
  role             String   @default("STUDENT")
  uiPrefs          Json?    @default("{}")

  // Optional profile customization
  bannerUrl        String?
  primaryColor     String?

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Institution {
  id          String   @id @default(cuid())
  name        String
  domain      String?
  logoUrl     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  primaryColor String?
  bannerUrl String?

}

model InstitutionUser {
  id             String   @id @default(cuid())
  userId         String
  institutionId  String
  role           String   // Dean | FacultyAdmin | Teacher | Student
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
