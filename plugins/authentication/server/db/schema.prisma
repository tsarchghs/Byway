generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "sqlite" // can be Postgres too
  url      = "file:./auth.db" // e.g., file:./auth.db
}

model User {
  id        String   @id @default(cuid())
  teacherProfileId       String?
  email     String   @unique
  password  String
  firstName String?
  lastName  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
