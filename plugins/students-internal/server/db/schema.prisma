generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "sqlite"
  url      = "file:./students.db"
}

model Enrollment {
  id          String   @id @default(cuid())
  studentId   String
  courseId    String
  progress Int      @default(0)
  score       Float?
  rubric      Json?
  isActive    Boolean  @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([studentId, courseId])
}

model StudentNote {
  id          String   @id @default(cuid())
  studentId   String
  courseId    String
  body        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([studentId, courseId])
}

model Course { id String @id @default(cuid()) title String }

model GradebookEntry { id String @id @default(cuid()) assignmentId String studentId String courseId String grade Float? feedback String? updatedAt DateTime @default(now()) }


model UserKV {
  id        String   @id @default(cuid())
  userId    String?
  sessionId String?
  key       String
  value     String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}
