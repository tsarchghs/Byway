generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "sqlite"
  url      = "file:./students.db"
}

\1  progressPct Int @default(0)
}

model StudentNote {
  id          String   @id @default(cuid())
  studentId   String
  courseId    String
  body        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([studentId, courseId])
}

model Course { id String @id @default(cuid()) title String }

model GradebookEntry { id String @id @default(cuid()) assignmentId String studentId String courseId String grade Float? feedback String? updatedAt DateTime @default(now()) }


model UserKV {
  id        String   @id @default(cuid())
  userId    String?
  sessionId String?
  key       String
  value     String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}


model KV {
  key   String @id
  value String?
}
