generator client {
  engineType = "node-api"
  provider   = "prisma-client-js"
  output     = "./generated"
}

datasource db {
  provider = "mysql" // can be Postgres too
  url      = "mysql://root:gjergji21@localhost:3306/byway_students" // e.g., file:./auth.db
}

// Minimal Student model to store auth linkage
model Student {
  id          String   @id @default(cuid())
  userId      String   @unique
  displayName String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model StudentNote {
  id        String   @id @default(cuid())
  studentId String
  courseId  String
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Course    Course   @relation(fields: [courseId], references: [id])

  @@index([studentId, courseId])
}

model Course {
  id          String   @id @default(cuid())
  title       String
  description String? // optional, useful for displaying course info
  progressPct Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  studentProgress  StudentProgress[]
  gradebookEntries GradebookEntry[]
  studentNotes     StudentNote[]
  StudentCourse    StudentCourse[]
  lessonShares     LessonShare[]
  metadata         Json?

  @@index([title])
}

model LessonShare {
  id        String   @id @default(cuid())
  courseId  String
  moduleId  String?
  lessonId  String?
  kind      String   // resource | attachment | bookmark, etc.
  title     String?
  url       String
  size      Int?
  mimeType  String?
  metadata  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@index([courseId, moduleId, lessonId])
  @@index([lessonId])
}

model GradebookEntry {
  id           String   @id @default(cuid())
  assignmentId String
  studentId    String
  courseId     String
  grade        Float?   @default(0)
  feedback     String?
  progressPct  Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  course Course? @relation(fields: [courseId], references: [id])

  @@index([studentId, courseId])
}

model StudentProgress {
  id          String   @id @default(cuid())
  studentId   String
  courseId    String
  moduleId    String? // optional, for finer granularity
  lessonId    String? // optional, for per-lesson tracking
  completed   Boolean  @default(false)
  score       Float?   @default(0)
  progressPct Int      @default(0)
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())

  // Relations
  course Course? @relation(fields: [courseId], references: [id])

  @@index([studentId, courseId])
  @@index([studentId, courseId, lessonId])
}

model UserKV {
  id        String   @id @default(cuid())
  userId    String?
  sessionId String?
  key       String
  value     String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model KV {
  key   String  @id
  value String?
}

model StudentCourse {
  id         String   @id @default(cuid())
  studentId  String
  courseId   String
  completed  Boolean  @default(false)
  progress   Int      @default(0)
  enrolledAt DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  course Course @relation(fields: [courseId], references: [id])

  @@index([studentId, courseId])
}
