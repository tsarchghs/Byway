generator client {
  engineType = "node-api"
  provider   = "prisma-client-js"
  output     = "./generated/client"
}

datasource db {
  provider = "sqlite"
  url      = "file:./teach.db"
}

model TeacherProfile {
  id          String   @id @default(cuid())
  bio         String
  subjects    String
  avatarUrl   String?
  verified    Boolean  @default(false)
  payoutEmail String?
  createdAt   DateTime @default(now())
}
