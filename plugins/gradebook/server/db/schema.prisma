// Gradebook plugin Prisma schema
generator client {
  provider   = "prisma-client-js"
  output     = "./generated/client"
  engineType = "binary"
}

datasource db {
  provider = "mysql" // can be Postgres too
  url      = "mysql://root:gjergji21@localhost:3306/byway_gradebook" // e.g., file:./auth.db
}

model GradebookEntry {
  id                  String   @id @default(cuid())
  courseId            String
  courseTitle         String?
  studentId           String
  studentDisplayName  String?
  assignmentId        String?
  assignmentTitle     String?
  score               Float?
  maxScore            Float?
  letter              String?
  feedback            String?
  metadata            Json?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}
